<head>
  <meta charset="utf-8">
  <title>Code Snippet Repo</title>
  <link rel="stylesheet" href="../main.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700|Ubuntu:300,400,500" rel="stylesheet">
</head>
{{#userP}}
<div class="prof">
  <h3>Your Profile</h3>
</div>
<div class="privateUser">
  <table class="privateDetails">
    <tr>
      <th align="left">Name</th>
      <td>{{name}}</td>
    </tr>
    <tr>
      <th align="left">Username</th>
      <td>{{username}}</td>
    </tr>
    <tr>
      <th align="left">Email</th>
      <td>{{email}}</td>
    </tr>
  </table>
</div>
<div class="editProf">
  <div>
    <h3>Edit Your Profile</h3>
  </div>
  <div class="userProf">
    <form class="profForm" action="/update/{{_id}}" method="post">
      <input type="text" name="name" value="{{name}}" placeholder="Name">
      <input type="text" name="username" value="{{username}}" placeholder="Username">
      <input type="email" name="email" value="{{email}}" placeholder="Email">
      <button type="submit" name="button">Save Changes</button>
    </form>
  </div>
</div>
<article class="snipArea">
  <div>
    <h3>Create a Snippet</h3>
  </div>
  <div class="createSnippet">
    <form class="snipForm" action="/create" method="post">
      <input type="text" name="title" value="" placeholder="Title">
      <textarea name="snippet" value="" rows="8" cols="80"></textarea>
      <input type="text" name="notes" value="" placeholder="Notes">
      <input type="text" name="language" value="" placeholder="Language">
      <input type="text" name="tags" value="" placeholder="Tags">
      <button type="submit" name="button">Save Snippet</button>
    </form>
  </div>
</article>
{{/userP}}
